<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- 引入jdbc，redis 配置文件 -->
	<context:property-placeholder location="classpath:conf/jdbc.properties" ignore-unresolvable="true"/>

	<!-- 扫描文件（自动将service层注入） -->
	<context:component-scan base-package="xyz.hollysys.api.service" />
	<context:component-scan base-package="xyz.hollysys.api.serviceImpl" />
	<context:component-scan base-package="xyz.hollysys.api.dao" />
	<!-- 扫描控制器 ,注意顺序关系-->
	<context:component-scan base-package="xyz.hollysys.api.controller" />
	<!-- 扫描DB helper -->
	<context:component-scan base-package="package xyz.hollysys.api.dbHelper" />
	
	<!-- log4j -->
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>classpath:conf/log4j.properties</value>
			</list>
		</property>
	</bean>
</beans>